{
  "name": "@fogpipe/forma-react",
  "version": "0.1.0",
  "description": "Headless React form renderer for Forma specifications",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "check-types": "tsc --noEmit",
    "check-types:test": "tsc --project tsconfig.test.json --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@fogpipe/forma-core": "*"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@fogpipe/eslint-config": "*",
    "@fogpipe/typescript-config": "*",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "jsdom": "^26.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.0.0"
  },
  "keywords": [
    "form",
    "react",
    "headless",
    "dynamic-forms",
    "wizard",
    "feel"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fogpipe/forma.git",
    "directory": "packages/forma-react"
  },
  "bugs": {
    "url": "https://github.com/fogpipe/forma/issues"
  },
  "homepage": "https://github.com/fogpipe/forma#readme",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  }
}
