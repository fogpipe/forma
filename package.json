{
  "name": "forma",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "check-types:test": "turbo run check-types:test",
    "test": "turbo run test",
    "static-qa": "turbo run lint check-types check-types:test"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@11.5.1",
  "workspaces": [
    "packages/*"
  ],
  "version": "0.11.1"
}
